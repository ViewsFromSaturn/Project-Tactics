<UserControl x:Class="ProjectTactics.Controls.CharacterSheet.CharacterSheetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="24" Background="Transparent">
            
            
            
            
            
            
            <!-- Portrait and Identity Section -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="128"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Portrait -->
                <Border Grid.Column="0" 
                       Width="128" Height="128"
                       CornerRadius="8"
                       BorderBrush="{StaticResource AccentViolet}"
                       BorderThickness="2">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding PortraitUrl}" 
                                  Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
                
                <!-- Identity Information -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding FullName}"
                             Style="{StaticResource Heading1}"/>
                    
                    
                    
                    
                    
                    
                    <TextBlock Text="{Binding RankTitle}"
                             Style="{StaticResource DimText}"
                             Margin="0,4,0,0"/>
                    
                    
                    
                    
                    <TextBlock Margin="0,8,0,0" 
                             Style="{StaticResource SecondaryText}">
                        <Run Text="Race: " FontWeight="Medium"/>
                        <Run Text="{Binding Race}"/>
                    </TextBlock>
                    
                    
                    
                    <TextBlock Style="{StaticResource SecondaryText}">
                        <Run Text="City: " FontWeight="Medium"/>
                        <Run Text="{Binding City}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
            
            <!-- Biography Section -->
            <TextBlock Text="Biography"
                     Style="{StaticResource Heading3}"
                     Margin="0,0,0,8"/>
            
            <TextBlock Text="{Binding Bio}"
                     Style="{StaticResource SecondaryText}"
                     TextWrapping="Wrap"
                     LineHeight="18"
                     Margin="0,0,0,24"/>
            
            <!-- Training Stats Section -->
            
