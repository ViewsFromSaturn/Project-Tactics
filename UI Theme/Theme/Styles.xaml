<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base TextBlock Style -->
    <Style x:Key="BaseTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <!-- Heading Styles -->
    <Style x:Key="Heading1" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Setter Property="FontFamily" Value="Georgia"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextBright}"/>
    </Style>
    
    <Style x:Key="Heading2" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Setter Property="FontFamily" Value="Georgia"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextBright}"/>
    </Style>
    
    
    
    
    
    <Style x:Key="Heading3" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextBright}"/>
    </Style>
    
    
    
    
    
    <!-- Secondary Text Style -->
    <Style x:Key="SecondaryText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
    <!-- Dim Text Style -->
    <Style x:Key="DimText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Setter Property="Foreground" Value="{StaticResource TextDim}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
    
    
    
    
    <!-- Glass Button Style -->
    <Style x:Key="GlassButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource CardBackgroundHover}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderMedium}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource BorderSubtle}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Accent Button Style -->
    <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
        <Setter Property="Background" Value="{StaticResource AccentVioletDim}"/>
        <Setter Property="BorderBrush" Value="{StaticResource AccentViolet}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBright}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentViolet}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Close Button Style -->
    <Style x:Key="CloseButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextDim}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentRubyDim}"/>
                <Setter Property="Foreground" Value="{StaticResource AccentRuby}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Card Container Style -->
    <Style x:Key="CardContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    
    <!-- Stat Badge Style -->
    <Style x:Key="StatBadge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,0,6,6"/>
    </Style>
    
</ResourceDictionary>
