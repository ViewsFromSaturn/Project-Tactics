<Window x:Class="ProjectTactics.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Tactics"
        Width="1200" Height="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    
    
    
    <Border CornerRadius="0" Background="#080812">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            
            
            
            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#14080812"
                    BorderBrush="#593C4150"
                    BorderThickness="0,0,0,1"
                    Padding="20,16"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚔️" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                                                                        <TextBlock Text="PROJECT TACTICS"
                                 FontFamily="Georgia"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Foreground="#EEEEE8"
                                 VerticalAlignment="Center"
                                 LetterSpacing="2"/>
                    </StackPanel>
                    
                    
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <Button Content="—" Style="{StaticResource CloseButton}" 
                              Click="MinimizeButton_Click" Margin="0,0,8,0"/>
                        <Button Content="✕" Style="{StaticResource CloseButton}" 
                              Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <!-- Background with gradient -->
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#080812" Offset="0"/>
                        <GradientStop Color="#0F0F1E" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                
                <!-- Main Menu Panel -->
                <StackPanel VerticalAlignment="Center" 
                          HorizontalAlignment="Center"
                          Width="400">
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    <TextBlock Text="MAIN MENU"
                             FontFamily="Georgia"
                             FontSize="32"
                             FontWeight="Bold"
                             Foreground="#EEEEE8"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,48"
                             LetterSpacing="4"/>
                    
                    <!-- Menu Buttons -->
                    <Button Content="Character Sheet"
                          Style="{StaticResource AccentButton}"
                          Margin="0,0,0,12"
                          Padding="24,16"
                          FontSize="16"
                          Click="OpenCharacterSheet_Click"/>
                    
                    <Button Content="Inventory"
                          Style="{StaticResource GlassButton}"
                          Margin="0,0,0,12"
                          Padding="24,16"
                          FontSize="16"
                          Click="OpenInventory_Click"/>
                    
                        
                        
                        
                        
                        
                        
                        
                        
                    <Button Content="Quest Log"
                          Style="{StaticResource GlassButton}"
                          Margin="0,0,0,12"
                          Padding="24,16"
                          FontSize="16"
                          Click="OpenQuestLog_Click"/>
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    <Button Content="Guild Management"
                          Style="{StaticResource GlassButton}"
                          Margin="0,0,0,12"
                          Padding="24,16"
                          FontSize="16"
                          Click="OpenGuildManagement_Click"/>
                    
                    
                    
                    
                    <Separator Background="#593C4150" 
                             Height="1" 
                             Margin="0,24,0,24"/>
                    
                    
